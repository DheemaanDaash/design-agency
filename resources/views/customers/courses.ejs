<section class=" container mx-auto py-8">
    <h1 class="text-6xl font-bold mb-8 text-center">Our Courses</h1>
    <% courses.forEach(function(course) { %>
        <div class="container flex mx-auto bg-gray-100 shadow-xl rounded-xl mb-12">
            <img class="ml-32 py-20" src="/img/<%= course.image %>" alt="" width="20%" height="20%">
            <div class="px-16 py-4 text-left ">
                <h2 class="font-bold text-5xl text-left">
                    <%= course.name %>
                </h2>
                <span class="rounded-full uppercase text-2xl text-left mb-4"><%= course.description %></span><br>
                <span class="type py-1 px-4 rounded-full uppercase text-xl text-left">
                    <%= course.type %>
                </span>
                <div class="  justify-around py-4">
                    <span class="text-left text-xl">Starting at </span>
                    <span class="font-bold text-xl text-left"> à§³ <%= course.price %></span>
                </div>
                <div class="mb-6">
                    <button class="add-to-cart py-1 px-4 rounded-full flex items-center font-bold text-left">
                        <span class="text-2xl">Register Now</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>
</section>